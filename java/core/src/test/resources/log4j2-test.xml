<Configuration name="Basic" status="warn">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%tn] %c - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.suse" level="INFO" />
        <Logger name="com.redhat.rhn" level="INFO" />
        <Root level="WARN">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
